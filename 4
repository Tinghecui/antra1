public abstract class Person
{
    // ... other properties and methods ...

    public void Introduce(string additionalInfo = "")
    {
        Console.WriteLine($"Hello, I am {GetFullName()} and I am {GetAge()} years old. {additionalInfo}");
    }
}
public class Student : Person
{
    // ... other properties and methods ...

    // Remove the overridden Introduce method
}

public class Instructor : Person
{
    // ... other properties and methods ...

    // Remove the overridden Introduce method
}
public class Program
{
    public static void Main(string[] args)
    {
        Student student = new Student("John", "Doe", 20, "Computer Science", 3.5);
        Instructor instructor = new Instructor("Jane", "Smith", 35, "Mathematics", 10);

        string studentInfo = $"I am a student majoring in {student.GetMajor()} with a GPA of {student.GetGPA()}.";
        string instructorInfo = $"I am an instructor teaching {instructor.GetSubject()} with {instructor.GetYearsOfExperience()} years of experience.";

        student.Introduce(studentInfo);
        instructor.Introduce(instructorInfo);
